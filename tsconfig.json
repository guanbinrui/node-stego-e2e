{
  "compilerOptions": {
    "jsx": "react",
    "lib": ["dom", "es2015"],
    "esModuleInterop": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "outDir": "lib/"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "node_modules/img-crawler/src/entities/*.ts"
  ]
}
